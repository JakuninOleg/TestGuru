<% if resource.present? && resource.errors.any? %>
  <%= content_tag :div, class: 'resource-errors row', data: { resource_id: resource.id } do %>
    <h2 class="col-12"><%= pluralize(resource.errors.count, 'error') %> detected:</h2>
      <ul>
        <% resource.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
  <% end %>
<% end %>
